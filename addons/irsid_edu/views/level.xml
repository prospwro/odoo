<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record
            id="view_edu_level_tree"
            model="ir.ui.view">
            <field name="name">edu.level.tree</field>
            <field name="model">edu.level</field>
            <field
                name="arch"
                type="xml">
                <tree
                    string="Levels"
                    editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record
            id="view_edu_level_form"
            model="ir.ui.view">
            <field name="name">edu.level.form</field>
            <field name="model">edu.level</field>
            <field
                name="arch"
                type="xml">
                <form
                    string="Level">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record
            id="action_edu_level"
            model="ir.actions.act_window">
            <field name="name">Levels</field>
            <field name="res_model">edu.level</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_edu_level"
            action="action_edu_level"
            sequence="2"
            parent="menu_edu_configuration_program"/>

    </data>
</openerp>
