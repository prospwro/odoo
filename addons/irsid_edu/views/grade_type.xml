<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record
            id="view_edu_grade_type_tree"
            model="ir.ui.view">
            <field name="name">edu.grade.type.tree</field>
            <field name="model">edu.grade.type</field>
            <field
                name="arch"
                type="xml">
                <tree
                    string="Grade Types"
                    version="7.0"
                    editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record
            id="action_edu_grade_type"
            model="ir.actions.act_window">
            <field name="name">Grade Types</field>
            <field name="res_model">edu.grade.type</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
            id="menu_edu_grade_type"
            action="action_edu_grade_type"
            sequence="10"
            parent="menu_edu_configuration_grade"/>

    </data>
</openerp>
