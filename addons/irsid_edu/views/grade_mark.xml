<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record
            id="view_edu_grade_mark_tree"
            model="ir.ui.view">
            <field name="name">edu.grade.mark.tree</field>
            <field name="model">edu.grade.mark</field>
            <field
                name="arch"
                type="xml">
                <tree
                    string="Grade Marks"
                    version="7.0"
                    editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>

        <record
            id="action_edu_grade_mark"
            model="ir.actions.act_window">
            <field name="name">Grade Marks</field>
            <field name="res_model">edu.grade.mark</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
            id="menu_edu_grade_mark"
            action="action_edu_grade_mark"
            sequence="20"
            parent="menu_edu_configuration_grade"/>

    </data>
</openerp>
